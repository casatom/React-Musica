<section id="generos">
  <div>
    <h2>GÃ©neros</h2>
    {{#if errorEdicion}}
      <br>
      <div
        class="p-3 text-danger-emphasis text-danger text-center bg-danger-subtle border border-danger-subtle rounded-3"
      >
        Hay un problema con la Edicion
      </div>
    {{/if}}

    {{#if errorCreacion}}
    <br>
      <div
        class="p-3 text-danger-emphasis text-danger text-center bg-danger-subtle border border-danger-subtle rounded-3"
      >
        Hay un problema con la Creacion
      </div>
    {{/if}}

    {{#if errorEliminar}}
    <br>
      <div
        class="p-3 text-danger-emphasis text-danger text-center bg-danger-subtle border border-danger-subtle rounded-3"
      >
        Hay un problema con la Elminacion
      </div>
    {{/if}}

    <a href="/admin/generos/alta"><button class="btn btn-outline-primary">Crear
        genero</button></a>

  </div>
  <br>
  <ul>
    {{#each generos}}
      <li>
        
        {{{this.imagen}}}
          
        <div>
          <h3>{{this.nombre}}</h3>
          <p>
            {{this.descripcion}}
          </p>
        </div>

        <form action="/admin/generos/editable" method="post" style="all:unset">
          <button
            type="submit"
            class="btn btn-outline-success"
            name="generoId"
            value="{{this.id}}"
          >Editar</button>
        </form>

        <form action="/admin/generos/borrar" method="post" style="all:unset">
          <button
            type="submit"
            class="btn btn-outline-danger"
            name="generoId"
            value="{{this.id}}"
          >Borrar</button>
        </form>

        <!--
        <a href="/admin/generos/editable"><button
            class="btn"
          >Editar</button></a>
        <a href="/admin/generos/borrar"><button class="btn">Borrar</button></a>
        -->
      </li>
    {{/each}}
  </ul>
</section>